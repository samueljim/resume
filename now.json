{
    "version": 2,
    "name": "Samuel-Henry",
    "public": false,
    "alias": ["samueljim.com"],
    "github": {
        "autoAlias": true
    },
    "regions": ["all"],
    "builds": [
        { "src": "api/**", "use": "@now/node", "config": { "maxLambdaSize": "40mb" } },
        { "src": "static/**", "use": "@now/static" },
        { "src": "views/**", "use": "@now/static" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/api/$1" },
        { "src": "/", "dest": "/views/index.html" },
        { "src": "/(.*)", "dest": "static/$1" }
    ],
    "env": {
        "USER_EMAIL": "sam.job.inquiries@gmail.com",
        "PASSWORD_EMAIL": "@email-password"
    }
}
