{
    "version": 2,
    "name": "Samuel-Henry",
    "builds": [
        { "src": "api/**", "use": "@now/node" },
        { "src": "static/**", "use": "@now/static" },
        { "src": "views/**", "use": "@now/static" }
    ],
    "routes": [
        { "src": "/proxy/(?<url>[^/]+)", "dest": "/api/proxy/?url=$url" },
        { "src": "/api/email/(.*)", "dest": "/api/email/$1" },
        { "src": "/", "dest": "/views/index.html" },
        { "src": "/(.*)", "dest": "static/$1" }
    ],
    "env": {
        "USER_EMAIL": "sam.job.inquiries@gmail.com",
        "PASSWORD_EMAIL": "@email-password"
    }
}
